<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/raisin_black"
    >
    <ImageButton
        android:id="@+id/backbutton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/_994376_arrow_back_left_navigation_previous_icon"
        android:background="@color/fui_transparent"
        />
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/rounded_beige"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:fontFamily="@font/nunito_extrabold"
            android:id="@+id/signUpText"
            android:text="SIGN UP"
            android:textColor="@color/black"
            android:textSize="30dp" />

        <ImageButton
            android:id="@+id/PicturePicker"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_below="@id/signUpText"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:background="@drawable/image_rounded"
            android:padding="0dp"
            android:scaleType="centerInside"
            android:src="@drawable/_976052_gallery_image_images_photo_picture_icon" />
    <EditText
        android:id="@+id/signupName"
        android:layout_width="300dp"
        android:layout_height="40dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:layout_below="@id/PicturePicker"
        android:fontFamily="@font/nunito_bold_italic"
        android:hint="Name:"
        android:paddingTop="0dp"
        android:textSize="23dp" />

    <EditText
        android:id="@+id/signupLastName"
        android:layout_width="300dp"
        android:layout_height="40dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:layout_below="@+id/signupName"
        android:fontFamily="@font/nunito_bold_italic"
        android:hint="Last name:"
        android:paddingTop="0dp"
        android:textSize="23dp" />

    <EditText
        android:id="@+id/signupEmail"
        android:layout_width="300dp"
        android:layout_height="40dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:layout_below="@+id/signupLastName"
        android:fontFamily="@font/nunito_bold_italic"
        android:hint="Email:"
        android:paddingTop="0dp"
        android:textSize="23dp" />

    <EditText
        android:id="@+id/signupPassword"
        android:layout_width="300dp"
        android:layout_height="40dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:layout_below="@+id/signupEmail"
        android:fontFamily="@font/nunito_bold_italic"
        android:hint="Password:"
        android:paddingTop="0dp"
        android:textSize="23dp" />

    <EditText
        android:id="@+id/signupNickname"
        android:layout_width="300dp"
        android:layout_height="40dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:layout_below="@+id/signupPassword"
        android:fontFamily="@font/nunito_bold_italic"
        android:hint="Nickname:"
        android:paddingTop="0dp"
        android:textSize="23dp" />

    <Button
        android:id="@+id/CreateAccount"
        android:layout_width="190dp"
        android:layout_height="60dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/signupNickname"
        android:layout_marginTop="20dp"
        android:fontFamily="@font/nunito_extrabold"
        android:text="SIGN UP"
        android:textSize="11dp"
        android:backgroundTint="@color/mint"
        android:textColor="@color/raisin_black" />
    </RelativeLayout>



</RelativeLayout>